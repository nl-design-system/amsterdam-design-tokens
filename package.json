{
  "version": "1.0.0-alpha.0",
  "author": "Community for NL Design System",
  "description": "Amsterdam Design System packages based on the NL Design System architecture",
  "license": "EUPL-1.2",
  "name": "@nl-design-system-unstable/amsterdam",
  "private": true,
  "workspaces": [
    "./documentation/",
    "./components/",
    "./components/*",
    "./packages/*",
    "./proprietary/*"
  ],
  "engines": {
    "node": "^16.4.2",
    "npm": "7"
  },
  "repository": {
    "type": "git+ssh",
    "url": "git@github.com:nl-design-system/amsterdam-design-tokens.git"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@etchteam/storybook-addon-status": "4.0.0",
    "@storybook/addon-a11y": "6.3.4",
    "@storybook/addon-actions": "6.3.4",
    "@storybook/addon-essentials": "6.3.4",
    "@storybook/addon-links": "6.3.4",
    "@storybook/addon-notes": "5.3.21",
    "@storybook/addon-viewport": "6.3.4",
    "@storybook/react": "6.3.4",
    "babel-loader": "8.2.2",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "html-validate": "4.0.2",
    "husky": "4.3.0",
    "lerna": "3.22.1",
    "lint-staged": "10.5.1",
    "markdownlint-cli": "0.25.0",
    "npm-package-json-lint": "5.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "rimraf": "3.0.2",
    "sass": "1.32.12",
    "stylelint": "13.7.2",
    "stylelint-config-prettier": "8.0.1"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "prebuild": "npm run clean",
    "build": "npm-run-all --sequential build-workspaces build:**",
    "build:storybook": "build-storybook --output-dir dist/ --static-dir proprietary/assets/src/",
    "build-workspaces": "lerna run build",
    "clean": "rimraf dist/ && lerna run clean",
    "deploy": "npm-run-all deploy:**",
    "lint": "npm-run-all --continue-on-error lint:** lint-workspaces",
    "lint:css": "stylelint --allow-empty-input '**/*.css'",
    "lint:js": "eslint --no-error-on-unmatched-pattern '**/*.{js,jsx,ts,tsx}'",
    "lint:html": "find . -type d \\( -name node_modules \\) -prune -false -o -name '*.html' -print0 | xargs -0 npx html-validate",
    "lint:md": "markdownlint '**/*.md'",
    "lint:package-json": "npmPkgJsonLint '**/package.json'",
    "lint-fix": "npm-run-all --continue-on-error lint-fix:** prettier",
    "lint-fix:css": "stylelint --fix '**/*.css'",
    "lint-fix:js": "eslint --fix '**/*.{js,jsx,ts,tsx}'",
    "lint-fix:md": "markdownlint --fix '**/*.md'",
    "lint-workspaces": "lerna run --no-bail lint",
    "prettier": "prettier --write .",
    "publish": "lerna publish from-package",
    "release": "lerna version prerelease --no-changelog --no-private",
    "start": "http-server dist/",
    "storybook": "npm-run-all --parallel watch:**",
    "test": "npm run test-workspaces",
    "test-workspaces": "lerna run --no-bail test",
    "prewatch:storybook": "lerna run build:stencil && lerna run build:style-dictionary",
    "watch:storybook": "start-storybook --port 6006 --static-dir proprietary/assets/src/",
    "watch:style-dictionary": "lerna run watch:style-dictionary"
  },
  "dependencies": {
    "http-server": "0.12.3"
  }
}
